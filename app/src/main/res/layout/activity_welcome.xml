                android:paddingBottom="32dp"
                android:textSize="36sp"
                android:singleLine="true"
                android:textStyle="normal"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:minHeight="36sp"
                android:shadowDy="1"
                android:shadowRadius="1" />
            <TextView
                android:text="[continuous reading + reading orientation]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:paddingTop="56dp"
                android:paddingBottom="56dp"
                android:textSize="18sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:minHeight="36sp"
                android:shadowDy="1"
                android:shadowRadius="1" />
        </ScrollView>-->
        <RelativeLayout
            android:id="@+id/page5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/setup_complete"
                android:text="@string/setup_complete"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="56sp"
                android:singleLine="true"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:minHeight="38sp"
                android:shadowDy="1"
                android:shadowRadius="1" />
            <TextView
                android:text="Tap to begin using app >"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/setup_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:singleLine="true"
                android:textStyle="normal"
                android:textAllCaps="true"
                android:shadowColor="@android:color/black"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@android:color/white"
                android:minHeight="12sp" />
        </RelativeLayout>
    </android.support.v4.view.ViewPager>
</layout>
